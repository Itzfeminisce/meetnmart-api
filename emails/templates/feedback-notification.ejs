  @media only screen and (max-width: 600px) {
    .email-container {
      padding: 10px !important;
    }
    
    .email-content {
      padding: 20px 15px !important;
    }
    
    .rating-display {
      font-size: 36px !important;
    }
    
    .star-rating span {
      font-size: 20px !important;
    }
    
    .cta-button {
      padding: 12px 24px !important;
      font-size: 14px !important;
    }
  }
</style>